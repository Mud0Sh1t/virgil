{% extends 'base.html.twig' %}

{% block body %}
<section>
    <article class="container">
        <div class="row">
            <div id="contact">
                <div id="shows" class="mt-3">
                    <img src="{{ asset("assets/img/header-page-contact.jpg") }}" class="img-fluid" alt="" />
                </div>
            </div>
        </div>
    </article>
    <article class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-6">
                <p class="text-white">Contactez nous Ã  cette adresse : <a class="text-white text-lowercase" href="mailto:virgilband@hotmail.com" target="_blank">virgilband@hotmail.com</a></p>
            </div>
        </div>
        {% if sponsors|length > 0 %}
            <div class="row justify-content-md-center">
                <div class="col-md-6">
                    <h3 class="mt-5 mb-5">Nos sponsors :</h3>
                </div>
                {% for sponsor in sponsors %}
                    <div class="col-md-6 mt-2 mb-2">
                        <img class="img-fluid" src="{{ asset('assets/img/sponsor/') }}{{sponsor.image}}" alt="Logo {{ sponsor.name }}">
                        <a href="{{ sponsor.urlSponsor }}" target="_blank">
                            <p class="text-center text-white mt-3">{{ sponsor.name }}</p>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </article>
</section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}