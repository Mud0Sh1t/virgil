{% extends 'base.html.twig' %}

{% block body %}
<section>
    <article class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 mt-5 mb-5">
                {% if error is not null %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <form method="post">
                    <div class="form-group">
                        <label for="username" class="text-white">Nom d'utilisateur :</label>
                        <input type="text" class="form-control" id="username" name="username" {% if username is defined %} value="{{ username }}" {% endif %} {% if username is null %}placeholder="username" {% endif %} required/>
                    </div>
                    <div class="form-group">
                        <label for="password" class="text-white">Mot de passe :</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="password"/>
                    </div>
                    <button type="submit" class="btn btn-primary">login</button>
                </form>
            </div>
        </div>
    </article>
</section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}